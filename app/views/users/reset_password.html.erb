<div class="login-container-better">
  <h1>Reset Password</h1>
  <form class="login-form" action="/users/<%=@user.reset_password_secret%>/resetPassword" method="post">
    <input class="" type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>"/>

    <input class="login-inputs" type="text" name="user[new_password]" placeholder="NEW PASSWORD" value="">
    <input class="login-inputs" type="text" name="user[password]" placeholder="NEW PASSWORD" value="">

    <div width="100px">
      <input class="best-btn" type="submit" value="Reset Password">
    </div>
  </form>
</div>
