<!DOCTYPE html>
<html>
  <head>
    <title>Angaea</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
  <link rel="shortcut icon" href="https://github.com/alexg622/angaea_heroku/blob/master/app/assets/images/the_angaea_final_symbol.png?raw=true">
  </head>
  <body>


   <div class="application-container">
     <%= render 'layouts/header' %>
     <% flash.each do |message_type, message| %>
       <div id="<%= message_type %>" class="alert-danger alert alert-<%= message_type %>"><%= message %></div>
     <% end %>
     <%= yield %>
   </div>
  </body>
  <%= render 'layouts/new_footer_black' %>
  <script>
    if (location.protocol != 'https:')
    {
     location.href = 'https:' + window.location.href.substring(window.location.protocol.length);
    }
  </script>
</html>
