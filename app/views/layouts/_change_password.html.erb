<div class="login-container-better">
  <h1>Update Password</h1>
  <form class="login-form" action="/users/<%=user.id%>/updatePassword" method="post">
    <input class="" type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>"/>

    <input class="login-inputs" type="password" name="user[password]" placeholder="OLD PASSWORD" value="">
    <input class="login-inputs" type="text" name="user[password_confirmation]" placeholder="NEW PASSWORD" value="">
    <input class="login-inputs" type="text" name="user[new_password]" placeholder="NEW PASSWORD" value="">

    <div width="100px">
      <input class="best-btn" type="submit" value="Update Password">
    </div>
  </form>
</div>
