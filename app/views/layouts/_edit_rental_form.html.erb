<div class="edit-rental-form-container">
  <h1>Update Your Rental</h1>
  <form enctype="multipart/form-data" class="rentalDate-class create-activity-form-css" action="<%= rental_path(rental) %>" method="post">
    <input class="" type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>"/>
    <input type="hidden" name="_method" value="patch">

    <label>
      <div style="display:flex"><div>Activity Name</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="rental[rental_name]" value="<%=rental.rental_name%>">
    </label>

    <label>
      <div style="display:flex"><div>Description</div><div style="color:red"> *</div></div>
      <textarea class="" name="rental[description]"><%=rental.description%></textarea>
    </label>

    <label>
      Additional Info
      <textarea class="" type="text" name="rental[additional_info]"><%=rental.additional_info%></textarea>
    </label>

    <label>
      Contact Number
      <input class="" type="text" name="rental[contact_number]" value="<%=rental.contact_number%>">
    </label>

    <label>
      <div style="display:flex"><div>Contact Email</div><div style="color:red"> *</div></div>
      <input class="" type="email" name="rental[contact_email]" value="<%=rental.contact_email%>">
    </label>

    <label>
      <div style="display:flex"><div>Price</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="rental[cost]" value="<%=rental.cost%>">
    </label>

    <label>
      <div style="display:flex"><div>Address 1</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="rental[addressLN1]" value="<%=rental.addressLN1%>">
    </label>

    <label>
      Address 2
      <input class="" type="text" name="rental[addressLN2]" value="<%=rental.addressLN2%>">
    </label>

    <label>
      <div style="display:flex"><div>City</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="rental[city]" value="<%=rental.city%>">
    </label>

    <label>
      <div style="display:flex"><div>State</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="rental[state]" value="<%=rental.state%>">
    </label>

    <label>
      <div style="display:flex"><div>Zipcode</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="rental[zipcode]" value="<%=rental.zipcode%>">
    </label>

    <label>
      <div style="display:flex"><div>Start Date - <%=rental.format_start_date%></div><div style="color:red"> *</div></div>
      <div class="rentalStart-datetime start-datetime rentalStart-datetime-input-container start-datetime-input-container datetime-input-container">
        <div class="rentalStart-datetime start-datetime datetime-input rentalStartDatetime-day"><%=rental.start_date.strftime("%m")%></div>
        <div class="rentalStart-datetime start-datetime datetime-input rentalStartDatetime-divider">/</div>
        <div class="rentalStart-datetime start-datetime datetime-input rentalStartDatetime-month"><%=rental.start_date.strftime("%d")%></div>
        <div class="rentalStart-datetime start-datetime datetime-input rentalStartDatetime-divider">/</div>
        <div class="rentalStart-datetime start-datetime datetime-input rentalStartDatetime-year"><%=rental.start_date.strftime("%Y")%></div>
        <div class="rentalStart-datetime start-datetime datetime-input rentalStartDatetime-hour"> <%=rental.start_date.strftime("%l")%></div>
        <div class="rentalStart-datetime start-datetime datetime-input rentalStartDatetime-divider">:</div>
        <div class="rentalStart-datetime start-datetime datetime-input rentalStartDatetime-minute"><%=rental.start_date.strftime("%M")%></div>
        <div class="rentalStart-datetime start-datetime datetime-input rentalStartDatetime-ampm"><%=rental.start_date.strftime("%p")%></div>
      </div>
      <input class="rentalStart-datetime-value start-datetime-value start-date" type="hidden" name="rental[start_date]" value="">
    </label>

    <label>
      <div style="display:flex"><div>End Date - <%=rental.format_end_date%></div><div style="color:red"> *</div></div>
      <div class="rentalEnd-datetime rentalEnd-datetime-input-container end-datetime end-datetime-input-container datetime-input-container">
        <div class="rentalEnd-datetime end-datetime datetime-input rentalEndDatetime-day"><%=rental.end_date.strftime("%m")%></div>
        <div class="rentalEnd-datetime end-datetime datetime-input rentalEndDatetime-divider">/</div>
        <div class="rentalEnd-datetime end-datetime datetime-input rentalEndDatetime-month"><%=rental.end_date.strftime("%d")%></div>
        <div class="rentalEnd-datetime end-datetime datetime-input rentalEndDatetime-divider">/</div>
        <div class="rentalEnd-datetime end-datetime datetime-input rentalEndDatetime-year"><%=rental.end_date.strftime("%Y")%></div>
        <div class="rentalEnd-datetime end-datetime datetime-input rentalEndDatetime-hour"><%=rental.end_date.strftime("%l")%></div>
        <div class="rentalEnd-datetime end-datetime datetime-input rentalEndDatetime-divider">:</div>
        <div class="rentalEnd-datetime end-datetime datetime-input rentalEndDatetime-minute"><%=rental.end_date.strftime("%M")%></div>
        <div class="rentalEnd-datetime end-datetime datetime-input rentalEndDatetime-ampm"><%=rental.end_date.strftime("%p")%></div>
      </div>
      <input class="end-datetime-value rentalEnd-datetime-value end-date" type="hidden" name="rental[end_date]" value="">
    </label>

    <label>
      Main Image
      <input class="" type="file" name="rental[image]" value="" multiple="multiple">
    </label>

    <label>
      Images - Please select all images at once
      <input class="" type="file" name="rental[images][]" placeholder="For multiple images please select all images at once" value="" multiple="multiple">
    </label>

    <input class="btn btn-primary" type="submit" value="Update Rental">
  </form>
  <%= link_to "Delete Rental" , rental_path(rental), method: :delete, class: "red sign-up-button"%>
  <%= render "layouts/rental_datetime_javascript"%>
  <%= render "layouts/rental_endDate_javascript"%>
</div>
