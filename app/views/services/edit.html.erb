<!-- display-it-none -->
<div class="update-service-form-container">
  <h1>Update your Service</h1>
  <form enctype="multipart/form-data" class="date-class second-create-activity-form-css" action="/services/<%=@service.id%>" method="post">
    <input class="" type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>"/>
    <input type="hidden" name="_method" value="patch">

    <div class="second-activity-new-personal-info-container">
      <input class="red-border new-activity-name" type="text" name="service[service_name]" placeholder="NAME*" value="<%=@service.service_name%>">
      <input class="red-border new-activity-email" type="email" name="service[contact_email]" placeholder="EMAIL*" value="<%=@service.contact_email%>">
      <input class="red-border new-activity-number" type="text" name="service[contact_number]" placeholder="CONTACT NUMBER*" value="<%=@service.contact_number%>">
    </div>

    <div class="second-activity-new-price-info-container">
      <input class="red-border second-activity-new-cost" type="text" name="service[cost]" placeholder="PRICE*" value="<%=@service.cost%>">
      <input class="red-border second-activity-new-capacity" type="text" name="service[capacity]" placeholder="MAX PEOPLE*" value="<%=@service.capacity%>">

        <select class="red-border second-activity-new-category" name="service[category]">
          <option value="art">art*</option>
          <option value="music">music</option>
          <option value="food">food</option>
          <option value="dance">dance</option>
          <option value="theatre">theatre</option>
          <option value="comedy">comedy</option>
        </select>

      <label>
        <select class="red-border second-activity-new-recurring" name="service[recurring_schedule]">
          <option value="">One-Time*</option>
          <option value="weekly">Weekly</option>
          <option value="bi-weekly">Bi-Weekly</option>
        </select>
      </label>
    </div>

    <div class="red-border second-activity-new-about-container">
      <textarea class="second-activity-new-about" name="service[content]" placeholder="ABOUT THIS SERVICE*"><%=@service.content%></textarea>
      <textarea class="second-activity-new-bring" name="service[additional_info]" placeholder="REQUIRED ITEMS*"><%=@service.additional_info%></textarea>
    </div>

    <div class="radio-buttons">
      <div class="radio-div">
        <div class="container-label">Go to Their Address</div>
        <input type="radio" value="hosts" checked="checked" name="service[:travel_options]">
      </div>
      <div class="radio-div">
        <div class="container-label">Have Them Come To Your Address (Give Address Below)</div>
        <input type="radio" value="travels" name="service[:travel_options]">
      </div>
      <div class="radio-div">
        <div class="container-label">Either (Give Address Below)</div>
        <input type="radio" value="both" name="service[:travel_options]">
      </div>
    </div>

    <div class="red-border second-activity-new-location-container">
      <input class="second-activity-new-location-address" type="text" name="service[addressLN1]" placeholder="ADDRESS*" value="<%=@service.addressLN1%>">
      <input class="second-activity-new-location-city" type="text" name="service[city]" placeholder="CITY*" value="<%=@service.city%>">
      <input class="second-activity-new-location-state" type="text" name="service[state]" placeholder="STATE*" value="<%=@service.state%>">
      <input class="second-activity-new-location-zip" type="text" name="service[zip]" placeholder="ZIPCODE*" value="<%=@service.zip%>">
    </div>

    <div class="availablity-container">
      <div class="availability-upper-container">
        <div class="new-form-availablity-text">Availability:</div>
        <div class="radio-buttons">
          <div class="radio-div">
            <div class="container-label">Weekdays</div>
            <input type="radio" value="weekdays" checked="checked" name="service[availability_days]">
          </div>
          <div class="radio-div">
            <div class="container-label">Weekends</div>
            <input type="radio" value="weekends" name="service[availability_days]">
          </div>
          <div class="radio-div">
            <div class="container-label">Both</div>
            <input type="radio" value="both" name="service[availability_days]">
          </div>
        </div>
      </div>
      <div class="availability-lower-container">
        <div class="new-form-availablity-text">Time:</div>
        <input class="second-activity-new-location-zip" type="text" name="service[availability_hours]" placeholder="EX: 9AM TO 5PM" value="<%=@service.availability_hours%>">
      </div>
    </div>

    <div class="second-activity-new-images-container">
      <div class="margin-right-label">
        <div class="bold-it">Main Image*:</div>
        <input readonly type="text" class="red-border service-new-image" placeholder="UPLOAD IMAGE"/>
        <div class="max-file-size">Max File Size 15MB</div>
        <input class="dont-display-service-image" type="file" type="hidden" name="service[image]" value="" multiple="multiple">
      </div>
      <label>
        <div class="Make-normal">Other Images:</div>
        <input readonly type="text" class="red-border service-new-images" placeholder="UPLOAD IMAGES"/>
        <div class="max-file-size">Max File Size 15MB</div>
        <input class="dont-display-service-images" type="file" name="service[images][]" value="" multiple="multiple">
      </label>
    </div>

    <div class="edit-delete-btn">
      <%= link_to "Delete Service" , service_path(@service), method: :delete, class: "no-black"%>
    </div>

    <input class="best-btn" type="submit" value="Update Service">
  </form>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      clickServiceFileImg()
      clickServiceFileImgs()
      isServiceImgAttached()
      isServiceImgsAttached()
    })

    function isServiceImgAttached() {
      let inputText = document.querySelector(".service-new-image")
      let inputImg = document.querySelector(".dont-display-service-image")
      inputImg.addEventListener("change", (e) => {
        if(inputImg.value !== "") {
          inputText.placeholder = "Image Attached"
        }
      })
    }

    function isServiceImgsAttached() {
      let inputText = document.querySelector(".service-new-images")
      let inputImg = document.querySelector(".dont-display-service-images")
      inputImg.addEventListener("change", (e) => {
        if(inputImg.value !== "") {
          inputText.placeholder = "Images Attached"
        }
      })
    }

    function clickServiceFileImg() {
      let inputText = document.querySelector(".service-new-image")
      let inputImg = document.querySelector(".dont-display-service-image")
      inputText.addEventListener("click", e => {
        inputImg.click()
      })
    }

    function clickServiceFileImgs() {
      let inputText = document.querySelector(".service-new-images")
      let inputImg = document.querySelector(".dont-display-service-images")
        if(inputText) {
          inputText.addEventListener("click", e => {
            inputImg.click()
          })
        }
    }
  </script>
</div>
